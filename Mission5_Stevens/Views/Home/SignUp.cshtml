@{
    ViewData["Title"] = "Sign Up";
}
<style>
    body {
        background-image: url('@Url.Content("~/golf-course-background.jpg")');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }
</style>

<h1 class ="text-center">@ViewData["Title"]</h1>

<div class="text-center">
    <p style="font-size: 36px;">Welcome to Taylor's Greens! Use this page to sign up and explore the exciting world of golf instruction.</p>

    <!-- Calculator Section -->
    <div>
        <h2 style="font-size: 48px;">Golf Tutoring Services Calculator</h2>

        <label for="hours" style="font-size: 32px;">Number of Hours:</label>
        <input type="number" id="hours" min="0" step="1" placeholder="Enter hours" />

        <div style="font-size: 32px;">
            <label>Hourly Charge:</label>
            <span id="hourlyCharge">$80</span>
        </div>

        <button id="calculateBtn" style="font-size: 32px;">Calculate Total</button>

        <div style="font-size: 32px;">
            <label>Total Cost: $</label>
            <span id="totalCost">0</span>
        </div>

        <a href="/" style="font-size: 32px;">Back to Home Page</a>
    </div>
</div>



<!-- jQuery Script -->
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#calculateBtn').click(function () {
                // Retrieve values
                var hours = parseFloat($('#hours').val());

                // Validate input
                if (isNaN(hours) || hours < 0) {
                    alert('Please enter a valid positive number for hours.');
                    return;
                }

                // Calculate total
                var hourlyCharge = 80;
                var total = hours * hourlyCharge;

                // Display total
                $('#totalCost').text(total.toFixed(2));
            });
        });
    </script>
}
